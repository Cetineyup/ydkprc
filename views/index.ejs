    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            // YARDIMCI FONKSİYON: Alt Müşterileri API ile yükler
            function loadAltMusteriler(ustaId, targetSelectId, selectedId = null, defaultOptionText = 'Yok / Ana Cari') {
                const select = document.getElementById(targetSelectId);
                if (!select) return;
                
                select.innerHTML = `<option value="">${defaultOptionText}</option>`;
                
                if (!ustaId || ustaId === '') {
                    return;
                }

                select.innerHTML = `<option value="">Yükleniyor...</option>`;
                
                fetch(`/api/alt-musteriler/${ustaId}`)
                    .then(res => res.json())
                    .then(data => {
                        select.innerHTML = `<option value="">${defaultOptionText}</option>`;
                        data.forEach(m => {
                            const opt = document.createElement('option');
                            opt.value = m.id;
                            opt.textContent = `${m.ad_soyad} - ${m.arac_plaka || ''}`;
                            if (selectedId && selectedId == m.id) opt.selected = true;
                            select.appendChild(opt);
                        });
                    })
                    .catch(() => {
                         select.innerHTML = `<option value="">Hata (Tekrar deneyin)</option>`;
                    });
            }

            // YARDIMCI FONKSİYON: Filtreler için basamaklı seçimi ayarlar
            function setupCascadingFilter(cariSelectId, altMusteriSelectId, initialSubContactId) {
                const cariSelect = document.getElementById(cariSelectId);
                const altMusteriSelect = document.getElementById(altMusteriSelectId);

                if (!cariSelect || !altMusteriSelect) return;
                
                const loadSubsForFilter = (ustaId, selectedSubId) => {
                    altMusteriSelect.innerHTML = '<option value="">Yükleniyor...</option>';
                    
                    if (ustaId) {
                        fetch(`/api/alt-musteriler/${ustaId}`)
                            .then(response => response.json())
                            .then(data => {
                                altMusteriSelect.innerHTML = '<option value="">Tümü</option>'; // Filtrede Tümü göster
                                data.forEach(musteri => {
                                    const option = document.createElement('option');
                                    option.value = musteri.id;
                                    option.textContent = `${musteri.ad_soyad} - ${musteri.arac_plaka || ''}`;
                                    if (selectedSubId && selectedSubId == musteri.id) {
                                        option.selected = true;
                                    }
                                    altMusteriSelect.appendChild(option);
                                });
                            })
                            .catch(() => {
                                 altMusteriSelect.innerHTML = '<option value="">Yükleme Hatası</option>';
                            });
                    } else {
                        // Cari seçimi kaldırılırsa, alt müşteriyi "Tümü" yap
                        altMusteriSelect.innerHTML = '<option value="">Tümü</option>';
                    }
                };

                // 1. Sayfa ilk yüklendiğinde, eğer bir Cari seçili geldiyse alt müşterileri yükle
                const initialCariId = cariSelect.value;
                if (initialCariId) {
                    // Cari seçili gelirse, Alt Müşterileri JS ile yükle
                    loadSubsForFilter(initialCariId, initialSubContactId);
                }

                // 2. Cari değiştiğinde alt müşterileri filtrele
                cariSelect.addEventListener('change', function() {
                    loadSubsForFilter(this.value, null); // Yeni usta seçildiğinde alt müşteri seçimini sıfırla
                });
            }

            // --- BAĞLANTILAR ---
            
            // 1. İşlem Ekle/Düzenle Modal Bağlantıları
            const newIslemContactSelect = document.getElementById('contactSelect');
            if (newIslemContactSelect) {
                newIslemContactSelect.addEventListener('change', function() {
                    loadAltMusteriler(this.value, 'subContactSelect', null, 'Seçiniz');
                });
            }
            document.querySelectorAll('.edit-islem').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const contactId = this.getAttribute('data-contact');
                    const subContactId = this.getAttribute('data-sub');
                    const tip = this.getAttribute('data-tip');
                    const tutar = this.getAttribute('data-tutar');
                    const urun = this.getAttribute('data-urun');
                    const aciklama = this.getAttribute('data-aciklama');
                    let tarih = this.getAttribute('data-tarih');
                    if(tarih) tarih = new Date(tarih).toISOString().slice(0, 16);

                    document.getElementById('edit_islem_id').value = id;
                    document.getElementById('editContactSelect').value = contactId;
                    document.getElementById('edit_islem_tipi').value = tip;
                    document.getElementById('edit_islem_tutar').value = tutar;
                    document.getElementById('edit_islem_urun').value = urun;
                    document.getElementById('edit_islem_aciklama').value = aciklama;
                    document.getElementById('edit_islem_tarih').value = tarih;
                    
                    // Alt müşterileri yükle ve seçili olanı işaretle
                    loadAltMusteriler(contactId, 'editSubContactSelect', subContactId);
                });
            });
            document.getElementById('editContactSelect').addEventListener('change', function() {
                 loadAltMusteriler(this.value, 'editSubContactSelect');
            });


            // 2. İşlemler Sayfası Filtre Bağlantısı (Güvenli Çağrı)
            setupCascadingFilter(
                'islemlerCariSelect', 
                'islemlerAltMusteriSelect', 
                // Filtre objesi sadece 'islemler' sayfasında tanımlı olduğu için güvenlik kontrolü
                '<%= typeof filtre !== "undefined" && filtre.alt_musteri_id ? filtre.alt_musteri_id : "" %>'
            );

            // 3. Raporlar Sayfası Filtre Bağlantısı (Güvenli Çağrı)
            setupCascadingFilter(
                'ekstreCariSelect', 
                'ekstreAltMusteriSelect', 
                '<%= typeof seciliAltMusteri !== "undefined" ? seciliAltMusteri : "" %>'
            );


            // --- DİĞER DÜZENLEME BUTONLARI ---
            document.querySelectorAll('.edit-alt-musteri').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('edit_id').value = this.getAttribute('data-id');
                    document.getElementById('edit_usta').value = this.getAttribute('data-usta');
                    document.getElementById('edit_ad').value = this.getAttribute('data-ad');
                    document.getElementById('edit_plaka').value = this.getAttribute('data-plaka');
                    document.getElementById('edit_tel').value = this.getAttribute('data-tel');
                });
            });
            document.querySelectorAll('.edit-cari').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('edit_cari_id').value = this.getAttribute('data-id');
                    document.getElementById('edit_cari_ad').value = this.getAttribute('data-ad');
                    document.getElementById('edit_cari_tip').value = this.getAttribute('data-tip');
                    document.getElementById('edit_cari_tel').value = this.getAttribute('data-tel');
                });
            });
        });
    </script>
</body>
